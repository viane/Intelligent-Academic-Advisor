<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
</head>
<body>
		<!-- include menu bar -->
	<%- include header.ejs %>
	<!-- end of menu bar -->
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<% if (user.local.email) { %>
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>email</strong>: <%= user.local.email %><br>
						<strong>password</strong>: <%= user.local.password %>
						<strong>name</strong>: <%= user.local.displayName %>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.facebook.id) { %>
		<!-- FACEBOOK INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.facebook.avatar %>"></img><br>
						<strong>id</strong>: <%= user.facebook.id %><br>
						<strong>email</strong>: <%= user.facebook.email %><br>
						<strong>name</strong>: <%= user.facebook.displayName %><br>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.twitter.id) { %>
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-twitter"></span> Twitter</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.twitter.avatar %>"></img><br>
						<strong>id</strong>: <%= user.twitter.id %><br>
						<strong>email</strong>: <%= user.twitter.email %><br>
						<strong>name</strong>: <%= user.twitter.name %><br>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.google.id) { %>
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-google"></span> Google</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.google.avatar %>"></img><br>
						<strong>id</strong>: <%= user.google.id %><br>
						<strong>email</strong>: <%= user.google.email %><br>
						<strong>name</strong>: <%= user.google.displayName %><br>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.linkedin.id) { %>
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-linkedin"></span> LinkedIn</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.linkedin.avatar %>"></img><br>
						<strong>id</strong>: <%= user.linkedin.id %><br>
						<strong>email</strong>: <%= user.linkedin.email %><br>
						<strong>name</strong>: <%= user.linkedin.displayName %><br>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.instagram.id) { %>
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-instagram"></span> Instagram</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.instagram.avatar %>"></img><br>
						<strong>id</strong>: <%= user.instagram.id %><br>
						<strong>name</strong>: <%= user.instagram.displayName %><br>
					</p>
			</div>
		</div>
		<% } %>
		
		<% if (user.reddit.id) { %>
		<!-- TWITTER INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-primary"><span class="fa fa-reddit"></span> Reddit</h3>
					<p>
						<strong>Avatar</strong>: <img src="<%= user.reddit.avatar %>"></img><br>
						<strong>id</strong>: <%= user.reddit.id %><br>
						<strong>name</strong>: <%= user.reddit.displayName %><br>
					</p>
			</div>
		</div>
		<% } %>
	</div>

</div>
</body>
</html>
