<!-- views/login.ejs -->
<!doctype html>
<html>

<head>
	<title>Node Authentication</title>
</head>

<body>
	<!-- include menu bar -->
	<%- include header.ejs %>
		<!-- end of menu bar -->
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">

				<h1 class="page-title"><span class="fa fa-sign-in"></span> Login</h1>

				<!-- show any messages that come back with authentication -->
				<% if (message.length > 0) { %>
					<div class="alert alert-danger">
						<%= message %>
					</div>
					<% } %>

						<!-- LOGIN FORM -->
						<form action="/login" method="post">
							<div class="form-group">
								<label>Email</label>
								<input type="text" class="form-control" name="email" placeholder="Enter your Email here">
							</div>
							<div class="form-group">
								<label>Password</label>
								<input type="password" class="form-control" name="password" placeholder="Enter your Password here">
							</div>

							<button type="submit" class="button">Login</button>
						</form>

						<hr>

						<p class="account-footer">Need an account? <a href="/signup">Signup</a></p>
						<p class="account-footer">Or go <a href="/">home</a>.</p>

			</div>

		</div>
</body>

</html>
