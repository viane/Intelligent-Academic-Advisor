<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>Admin Console</title>
</head>
<body>
	<!-- include menu bar -->
	<%- include header.ejs %>
	<!-- end of menu bar -->
<div class="container">

<% var role = locals.user.local.role %>
<% var name = locals.user.local.displayName %>

<div class="col-sm-6 col-sm-offset-3">
    <div class="title-admin">
        <p>Welcome <%- role %>, <%- name %></p>
    </div>
	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

    <!-- Admin function entry points -->
	<a href="/QuestionAnswerManagement"><i class="fa fa-book" aria-hidden="true"></i>QA Management</a>
</br>
	<a href="/SystemManagement"><i class="fa fa-ravelry" aria-hidden="true"></i></i>System Management</a>

</div>

</div>
</body>
</html>
