<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Intelligent Academic Planner - Inbox</title>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>
    <!-- include menu bar -->
    <%- include header.ejs %>
        <!-- end of menu bar -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="#inbox" role="tab" data-toggle="tab">Inbox<span class="label label-success">10</span></a>
                        </li>
                        <li>
                            <a href="#sent" role="tab" data-toggle="tab">Sent</a>
                        </li>
                        <li>
                            <a href="#trash" role="tab" data-toggle="tab">Trash</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        <input type="search" placeholder="Search Mail" class="form-control mail-search" />
        <div class="tab-content">
          <!-- advisor  -->
          <% if(locals.user.local.role === "advisor") { %>
            <div class="tab-pane active" id="inbox">
                <div class="container">
                    <div class="content-container clearfix">
                        <div class="col-md-12">
                            <h1 class="content-title">Inbox</h1>
                            <% if(locals.user.received_assessment_history.length > 0) { %> <%- JSON.stringify(locals.user.received_assessment_history) %> <% }else{ %> Your Inbox is empty <% } %>
                        </div>
                    </div>
                </div>
            </div>
          <% }else{ %>
            <div class="tab-pane active" id="inbox">
                <div class="container">
                    <div class="content-container clearfix">
                        <div class="col-md-12">
                            <h1 class="content-title">Inbox</h1>
                            <% if(locals.user.inbox.length>0) { %> <%- JSON.stringify(locals.user.inbox) %> <% }else{ %> Your Inbox is empty <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <div class="tab-pane" id="sent">
                <div class="container">
                    <div class="content-container clearfix">
                        <div class="col-md-12">
                            <h1 class="content-title">Sent Mail</h1>
                            <% if(locals.user.submitted_assessment_history.length>0) { %> <%- JSON.stringify(locals.user.submitted_assessment_history) %> <% }else{ %> Your Inbox is empty <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="trash">
                <div class="container">
                    <div class="content-container clearfix">
                        <div class="col-md-12">
                            <h1 class="content-title">Trash</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include footer.ejs %>
</body>

</html>
